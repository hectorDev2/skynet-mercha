generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User{
  id Int @default(autoincrement()) @id
  email String @unique
  username String @unique
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tshirts Tshirt[]
  shoes Shoe[]
}



model Tshirt{
  id Int @default(autoincrement()) @id
  name String
  price Int
  description String
  tag String
  category String
  subcategory String
  label String @default("default")
  images Image[]
  userId Int @default(2)
  user User? @relation(fields: [userId],references: [id])
}


model Image {
  id        Int       @id @default(autoincrement())
  url       String
  tshirtId  Int?
  tshirt    Tshirt?   @relation(fields: [tshirtId], references: [id])
}


model Shoe{
  id Int @default(autoincrement()) @id
  name String
  description String
  tag String
  category String
  subcategory String
  label String @default("default")
  images ImageShoe[]
  userId Int @default(2)
  user User? @relation(fields: [userId],references: [id])
}

model ImageShoe{
  id        Int       @id @default(autoincrement())
  url       String
  shoeId  Int?
  shoe    Shoe?   @relation(fields: [shoeId], references: [id])
}