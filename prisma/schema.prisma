generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model Tshirt{
  id Int @default(autoincrement()) @id
  name String
  price Int
  description String
  images Image[]
  
}

model Image {
  id        Int       @id @default(autoincrement())
  url       String
  tshirtId  Int?
  tshirt    Tshirt?   @relation(fields: [tshirtId], references: [id])
}